package main;

public class P20 {
	
	public void main(){
		System.out.println("========== Anfang Seite 10. ==========");
		
		int x = 3;
		while (x < 0){
			if (x > 2){
				System.out.print("a");
			}
			x = x - 1;
				System.out.print("-");
			if (x == 2){
				System.out.print("b c");
			}
			x = x - 1;
			System.out.print("-");
			if (x == 1){
				System.out.print("d");
				x = x - 1;
			}
		}
		
		System.out.println();
		System.out.println("========== Ende Seite 13/3. ==========");
		System.out.println();
	}

}
